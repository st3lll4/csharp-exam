@page
@model WebApp.Pages.NameQuestionnaire

<div class="container-md mt-4">
    <div class="card">
        <div class="card-header bg-dark text-white">
            <h5 class="mb-0">Name your questionnaire</h5>
        </div>
        <div class="card-body">
            <form method="post">
                <div class="mb-3">
                    <label class="form-label">name:</label>
                    <input type="text" class="form-control" asp-for="QuestionnaireTitle" required/>
                    @if (!string.IsNullOrEmpty(Model.Message))
                    {
                        <div class="text-danger mt-2">@Model.Message</div>
                    }
                </div>
                <div class="mt-3">
                    <button type="submit" class="btn btn-dark">Next</button>
                    <a href="/Index" class="btn btn-outline-dark ms-2">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
