@page
@model WebApp.Pages.ConfigureQuestion

<div class="container-fluid mt-4">
    <div class="card">
        <div class="card-header bg-dark text-white">
            <h5 class="mb-0">Question settings</h5>
        </div>
        <div class="card-body">
            <form method="post">
                <div class="mb-3">
                    <label class="form-label">Question yype:</label>
                    <select asp-for="Type" class="form-select"
                            asp-items="Model.TypeSelectList"></select>
                </div>
                <div class="mb-3">
                    <label class="form-label">Number of options:</label>
                    <input type="number" asp-for="OptionAmount" class="form-control" min="2" max="10" required/>
                </div>
                <div class="mt-3">
                    <button type="submit" class="btn btn-dark">Next</button>
                    <a href="/Index" class="btn btn-outline-dark ms-2">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
